<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="login_userdata"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <item name="android:layout_width"> wrap_content </item>
        <item name="android:layout_height"> wrap_content </item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="login_button">
        <item name="android:layout_width"> 0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/soft_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/shape_box_gray</item>
    </style>

    <style name="login_edit_text">
        <item name="android:layout_width"> 0dp </item>
        <item name="android:layout_height"> 50dp </item>
        <item name="android:background">@drawable/shape_box_white</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="login_circle_images">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">69dp</item>
        <item name="civ_border_color">@color/white</item>
        <item name="civ_border_width">2dp</item>
        <item name="android:layout_marginBottom">116dp</item>
    </style>

</resources>