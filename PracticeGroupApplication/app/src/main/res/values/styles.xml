<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="login_userdata">
        <item name="android:layout_width"> wrap_content </item>
        <item name="android:layout_height"> wrap_content </item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/tv_userdata</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="login_button">
        <item name="android:layout_width"> @dimen/width_null</item>
        <item name="android:layout_height">@dimen/ev_height</item>
        <item name="android:textColor">@color/soft_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/bt_text</item>
        <item name="android:background">@drawable/shape_box_gray</item>
    </style>

    <style name="login_edit_text">
        <item name="android:layout_width"> @dimen/width_null </item>
        <item name="android:layout_height"> @dimen/ev_height </item>
        <item name="android:background">@drawable/shape_box_white</item>
        <item name="android:paddingLeft">@dimen/ev_padding_left</item>
    </style>

    <style name="login_circle_images">
        <item name="android:layout_width">@dimen/civ_width</item>
        <item name="android:layout_height">@dimen/civ_height</item>
        <item name="civ_border_color">@color/white</item>
        <item name="civ_border_width">@dimen/civ_border_size</item>
        <item name="android:layout_marginBottom">@dimen/civ_margin_bottom</item>
    </style>

</resources>